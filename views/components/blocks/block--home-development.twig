<div class="block--home-development grid--one grid--sm-half nog font--large spacing--vert-3" {% if home.development.image %}style="background-image:url('{{home.development.image}}')"{% endif %}>
<h2>{{home.development.title}}</h2>
{% if home.development.developments %}
{% for development in home.development.developments %}
	<p>{{development.title}} <a href="{{development.link}}" class="color--black underline">read more.</a></p>
{% endfor %}

{% else %}
	<p>Coming Soon!</p>
	{% endif %}
</div>